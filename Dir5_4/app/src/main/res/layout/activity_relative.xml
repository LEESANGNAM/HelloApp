<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:text="@string/text_phone"/>
    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/text_phone"
        android:layout_alignBaseline="@+id/text_phone"
        android:hint="@string/edit_hint"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_input"
        android:textSize="20sp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edit_phone"
        android:layout_toLeftOf="@+id/btn_cencle"
        />
    <Button
        android:id="@+id/btn_cencle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_cencle"
        android:textSize="20sp"
        android:layout_below="@+id/edit_phone"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>